<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/intereses"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/customedittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:background="@color/bonne">

            <TextView
                android:id="@+id/nombreEventotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tus eventos inscritos"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/DarkBlue"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:background="@drawable/customedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:background="@color/DarkGreen">

                    <TextView
                        android:id="@+id/EventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOMBRE DEL EVENTO 1"
                        android:textColor="@color/bonne"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/informacionEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: fecha x
                        \nHora: 8pm\nLugar: lygar x \nDireccion: calle x "
                        android:textColor="@color/bonne"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/detalle"
                        android:layout_width="187dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/bonne"
                        android:text="Ver detalles"
                        android:textColor="@color/DarkBlue"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@drawable/customedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:background="@color/DarkGreen">

                    <TextView
                        android:id="@+id/EventName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOMBRE DEL EVENTO 2"
                        android:textColor="@color/bonne"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/informacionEvento2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: fecha x
                        \nHora: 8pm\nLugar: lugar x \nDireccion: calle x "
                        android:textColor="@color/bonne"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                    <Button
                        android:id="@+id/detalle2"
                        android:layout_width="187dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/bonne"
                        android:text="Ver detalles"
                        android:textColor="@color/DarkBlue"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@drawable/customedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:background="@color/DarkGreen">

                    <TextView
                        android:id="@+id/EventName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOMBRE DEL EVENTO 3"
                        android:textColor="@color/bonne"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/informacionEvento3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: fecha x
                        \nHora: 8pm\nLugar: lugarx \nDireccion: calle x "
                        android:textColor="@color/bonne"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/detalle3"
                        android:layout_width="187dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/bonne"
                        android:text="Ver detalles"
                        android:textColor="@color/DarkBlue"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/VerEventos"
                android:layout_width="187dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/DarkLightBlue"
                android:text="Volver al mapa"
                android:textColor="@color/bonne"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
