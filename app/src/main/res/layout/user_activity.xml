<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/intereses">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/customedittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:background="@color/bonne">

            <TextView
                android:id="@+id/Intereses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tus eventos isncritos"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/DarkBlue"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <androidx.cardview.widget.CardView
                android:background="@drawable/customedittext"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:background="@color/DarkLightBlue"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="23dp">


                    <TextView
                        android:id="@+id/Evento1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Graffiti"
                        android:textColor="@color/bonne"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="118dp"

                        android:src="@drawable/graffiti" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:background="@drawable/customedittext"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/DarkLightBlue"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="23dp">


                    <TextView
                        android:id="@+id/Coslpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cosplay"
                        android:textColor="@color/bonne"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="127dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cosplay" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </GridLayout>


    </ScrollView>

</LinearLayout>
